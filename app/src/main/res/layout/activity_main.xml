<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/ekran">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:columnCount="3"
        android:rowCount="3"
        android:id="@+id/pole_gry"
        android:layout_alignWithParentIfMissing="false"
        android:alignmentMode="alignBounds"
        android:rowOrderPreserved="false"
        android:useDefaultMargins="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentTop="false"
        android:paddingTop="0dp"
        android:translationZ="0dp"
        android:layout_centerInParent="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_0x0"
            android:layout_row="0"
            android:layout_column="0"
            android:clickable="true"
            android:height="85dp"
            android:width="85dp"
            android:onClick="klik"
            android:nestedScrollingEnabled="false"
            android:textSize="30sp"
            android:enabled="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_0x1"
            android:layout_row="0"
            android:layout_column="1"
            android:height="85dp"
            android:width="85dp"
            android:onClick="klik"
            android:textSize="30sp"
            android:enabled="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_0x2"
            android:layout_row="0"
            android:layout_column="2"
            android:height="85dp"
            android:width="85dp"
            android:onClick="klik"
            android:textSize="30sp"
            android:enabled="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_1x0"
            android:layout_row="1"
            android:layout_column="0"
            android:height="85dp"
            android:width="85dp"
            android:onClick="klik"
            android:textSize="30sp"
            android:enabled="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_1x1"
            android:layout_row="1"
            android:layout_column="1"
            android:height="85dp"
            android:width="85dp"
            android:onClick="klik"
            android:textSize="30sp"
            android:enabled="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_1x2"
            android:layout_row="1"
            android:layout_column="2"
            android:height="85dp"
            android:width="85dp"
            android:onClick="klik"
            android:textSize="30sp"
            android:enabled="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_2x0"
            android:layout_row="2"
            android:layout_column="0"
            android:height="85dp"
            android:width="85dp"
            android:onClick="klik"
            android:textSize="30sp"
            android:enabled="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_2x1"
            android:layout_row="2"
            android:layout_column="1"
            android:height="85dp"
            android:width="85dp"
            android:onClick="klik"
            android:textSize="30sp"
            android:enabled="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_2x2"
            android:layout_row="2"
            android:layout_column="2"
            android:height="85dp"
            android:width="85dp"
            android:onClick="klik"
            android:textSize="30sp"
            android:enabled="true" />

    </GridLayout>

</RelativeLayout>
